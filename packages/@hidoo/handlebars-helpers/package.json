{
  "name": "@hidoo/handlebars-helpers",
  "version": "0.1.1",
  "description": "A helper library that summarizes commonly used functions in Handlebars.",
  "keywords": [
    "handlebars"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel ./src --out-dir ./lib",
    "test": "npm-run-all -s test:*",
    "test:lint": "eslint .",
    "test:unit": "cross-env NODE_ENV=test mocha ./test",
    "version": "npm-run-all -s version:changelog version:commit",
    "version:changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -s -r 0",
    "version:commit": "git add ./CHANGELOG.md"
  },
  "dependencies": {
    "highlight.js": "^9.12.0",
    "marked": "^0.5.1",
    "path-browserify": "^1.0.0"
  },
  "peerDependencies": {
    "handlebars": "^4.0.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@hidoo/eslint-config": "^0.1.3",
    "babel-eslint": "^10.0.1",
    "babel-preset-power-assert": "^3.0.0",
    "conventional-changelog-cli": "^2.0.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "handlebars": "^4.0.11",
    "husky": "^1.1.0",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "power-assert": "^1.6.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint"
    ]
  },
  "author": "hidoo",
  "repository": {
    "type": "git",
    "url": "https://github.com/hidoo/handlebars-helpers"
  },
  "license": "MIT"
}
