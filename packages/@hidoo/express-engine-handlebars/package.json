{
  "name": "@hidoo/express-engine-handlebars",
  "version": "0.1.9",
  "description": "Handlebars template engine for express.",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "keywords": [
    "express",
    "engine"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hidoo/express-engine-handlebars.git"
  },
  "author": "hidoo",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "cross-env NODE_ENV=production babel ./src --out-dir ./lib",
    "test": "npm-run-all -s test:*",
    "test:lint": "eslint .",
    "test:unit": "cross-env NODE_ENV=test mocha ./test",
    "prepare": "npm-run-all -s test build",
    "version": "npm-run-all -s version:changelog version:commit",
    "version:changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -s -r 0",
    "version:commit": "git add ./CHANGELOG.md"
  },
  "dependencies": {
    "@hidoo/handlebars-helpers": "^0.5.1",
    "glob": "^7.1.4",
    "glob-parent": "^5.0.0",
    "handlebars": "^4.1.2",
    "handlebars-layouts": "^3.1.4",
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@hidoo/eslint-config": "^0.1.3",
    "babel-eslint": "^10.0.1",
    "babel-preset-power-assert": "^3.0.0",
    "conventional-changelog-cli": "^2.0.21",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "express": "^4.17.1",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "request": "^2.88.0",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint"
    ]
  }
}
