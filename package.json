{
  "name": "handlebars-lib",
  "version": "0.0.0",
  "description": "This is monorepo for libraries of Handlebars.",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "8.15.5"
  },
  "scripts": {
    "build": "pnpm run --filter './packages/@hidoo/**' --if-present build",
    "test": "pnpm run --sequential '/^test:.*/'",
    "test:lint": "eslint .",
    "test:packages": "pnpm --filter './packages/@hidoo/**' --if-present test",
    "preinstall": "npx only-allow pnpm",
    "prepare": "git config --local core.hooksPath .githooks",
    "version:patch": "lerna version patch && pnpm run --sequential '/^(build|test)$/'",
    "version:minor": "lerna version minor && pnpm run --sequential '/^(build|test)$/'",
    "version:major": "lerna version major && pnpm run --sequential '/^(build|test)$/'",
    "release": "lerna publish from-package"
  },
  "author": "hidoo",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@hidoo/eslint-config": "0.6.0",
    "@lerna-lite/cli": "3.3.1",
    "@lerna-lite/publish": "3.3.1",
    "@lerna-lite/version": "3.3.1",
    "cross-env": "7.0.3",
    "eslint": "7.30.0",
    "lint-staged": "11.0.1",
    "npm-run-all": "4.1.5"
  },
  "pnpm": {
    "overrides": {
      "glob-parent": "^6.0.0",
      "minimist": "^1.2.5",
      "trim-newlines": "^4.0.0"
    }
  }
}
